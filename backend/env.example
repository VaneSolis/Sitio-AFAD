# Configuración del servidor
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5000

# Configuración de email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion
ADMIN_EMAIL=admin@afad.org

# Configuración de seguridad
JWT_SECRET=tu-jwt-secret-super-seguro
SESSION_SECRET=tu-session-secret

# Configuración de base de datos
DB_PATH=./database/afad.db

# Configuración de logs
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Configuración de PayPal (opcional)
PAYPAL_CLIENT_ID=tu-paypal-client-id
PAYPAL_CLIENT_SECRET=tu-paypal-client-secret
PAYPAL_MODE=sandbox

# Configuración de Google Analytics (opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Configuración de Facebook Pixel (opcional)
FACEBOOK_PIXEL_ID=XXXXXXXXXX 